<div class="form-group" style="display: none">
	<label class="col-lg-3 col-sm-3 control-label">分類</label>
	<div class="col-lg-9">
		<select name="category[category_type]" class="form-control">
			<% @category.collection_category_type.each do |v| %>
			<option value="<%= v %>"><%= v %></option>
			<% end %>
		</select>
	</div>
</div>
<div class="form-group">
	<label class="col-lg-3 col-sm-3 control-label">名稱</label>
	<div class="col-lg-9">
		<input type="text" class="form-control" name="category[name]" value="<%= @category.name %>" />
	</div>
</div>
<div class="form-group">
	<div class="col-lg-12">
		<button class="btn btn-block btn-danger">
			確認
		</button>
	</div>
</div>
